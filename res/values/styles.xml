<resources>

    <attr name="btn_ic_action_copy" format="reference"/>
    <attr name="btn_ic_action_collection" format="reference"/>
	<attr name="btn_ic_action_map" format="reference"/>
	<attr name="btn_ic_action_share" format="reference"/>
    
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Black">
        <item name="btn_ic_action_copy">@drawable/ic_action_copy_dark</item>
        <item name="btn_ic_action_collection">@drawable/ic_action_collection_dark</item>
        <item name="btn_ic_action_map">@drawable/ic_action_map_dark</item>
        <item name="btn_ic_action_share">@drawable/ic_action_share_dark</item>
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="ThemeLight" parent="android:Theme.Light">
        <item name="btn_ic_action_copy">@drawable/ic_action_copy_light</item>
        <item name="btn_ic_action_collection">@drawable/ic_action_collection_light</item>
        <item name="btn_ic_action_map">@drawable/ic_action_map_light</item>
        <item name="btn_ic_action_share">@drawable/ic_action_share_light</item>
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    

    
    
</resources>
