<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseThemeDark" parent="android:Theme.Material">
        <item name="btn_ic_action_copy">@drawable/ic_action_copy_dark</item>
        <item name="btn_ic_action_collection">@drawable/ic_action_collection_dark</item>
        <item name="btn_ic_action_map">@drawable/ic_action_map_dark</item>
        <item name="btn_ic_action_share">@drawable/ic_action_share_dark</item>
        <item name="btn_ic_action_save">@drawable/ic_action_save_dark</item>
        <item name="btn_ic_action_new_label">@drawable/ic_action_new_label_dark</item>
        <item name="btn_ic_action_send_now">@drawable/ic_action_send_now_dark</item>
        <item name="btn_ic_action_person">@drawable/ic_action_person_dark</item>
        
        <!-- API 21 theme customizations can go here. -->
        <!-- Main theme colors -->
	    <!--   your app branding color for the app bar -->
	    <item name="android:colorPrimary">@color/lolli_primary_dt</item>
	    <!--   darker variant for the status bar and contextual app bars -->
	    <item name="android:colorPrimaryDark">@color/lolli_top_dt</item>
	    <!--   theme UI controls like checkboxes and text fields -->
	    <item name="android:colorAccent">@color/accent_dt</item>
	    <item name="android:windowBackground">@color/lolli_background_dt</item>
		<item name="android:colorButtonNormal">@color/lolli_top_dt</item>
	    
    </style>
	
    <style name="AppBaseThemeLight" parent="android:Theme.Material.Light">
        <item name="btn_ic_action_copy">@drawable/ic_action_copy_light</item>
        <item name="btn_ic_action_collection">@drawable/ic_action_collection_light</item>
        <item name="btn_ic_action_map">@drawable/ic_action_map_light</item>
        <item name="btn_ic_action_share">@drawable/ic_action_share_light</item>
        <item name="btn_ic_action_save">@drawable/ic_action_save_light</item>
        <item name="btn_ic_action_new_label">@drawable/ic_action_new_label_light</item>
        <item name="btn_ic_action_send_now">@drawable/ic_action_send_now_light</item>
        <item name="btn_ic_action_person">@drawable/ic_action_person_light</item>
        
        <!-- API 21 theme customizations can go here. -->
        <!-- Main theme colors -->
	    <!--   your app branding color for the app bar -->
	    <item name="android:colorPrimary">@color/lolli_primary_lt</item>
	    <!--   darker variant for the status bar and contextual app bars -->
	    <item name="android:colorPrimaryDark">@color/lolli_top_lt</item>
	    <!--   theme UI controls like checkboxes and text fields -->
	    <item name="android:colorAccent">@color/accent_lt</item>
	    <item name="android:windowBackground">@color/lolli_background_lt</item>
		<item name="android:colorButtonNormal">@color/lolli_btn_lt</item>
        
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
	
</resources>
