<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.perm.trubnikov.gps2sms"
    android:installLocation="auto"
    android:versionCode="59"
    android:versionName="@string/version_name" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme_Dark" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AnotherMsgActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateAlwaysHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.CATEGORY_ALTERNATE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TabsActivity"
            android:label="@string/app_name">
            <intent-filter>
                <category android:name="android.intent.category.CATEGORY_ALTERNATE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyCoordsActivity"
            android:label="@string/app_name">
            <intent-filter>
                <category android:name="android.intent.category.CATEGORY_ALTERNATE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MySMSActivity"
            android:label="@string/app_name">
            <intent-filter>
                <category android:name="android.intent.category.CATEGORY_ALTERNATE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MySMSOutActivity"
            android:label="@string/app_name">
            <intent-filter>
                <category android:name="android.intent.category.CATEGORY_ALTERNATE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserSettingActivity"
            android:label="@string/menu_item_settings" >
        </activity>
        
        
<receiver android:name=".IncomingSms">   
     <intent-filter>
         <action android:name="android.provider.Telephony.SMS_RECEIVED" />
     </intent-filter>
 </receiver>
        
        
        
    </application>

</manifest>
